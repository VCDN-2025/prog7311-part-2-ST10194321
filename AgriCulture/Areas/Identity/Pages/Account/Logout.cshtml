@page
@model LogoutModel
@{
    ViewData["Title"] = "Log out";
}

<div class="log-overlay-custom"></div>

<div class="d-flex align-items-center justify-content-center py-4" style="min-height: 80vh; background: #fdfbf3;">
    <div class="p-3" style="background: #fffdf5; border: 1.5px solid #002307; border-radius: 18px; max-width: 480px; width: 100%; box-shadow: 0 4px 16px rgba(0,0,0,0.10); text-align: center; padding: 1.5rem 1.5rem;">
        <h1 style="font-family: 'Inter', sans-serif; font-weight: 900; font-size: 3rem; color: #ffd36a; margin-bottom: 0.5rem;">Goodbye!</h1>
        <h2 style="font-family: 'Inter', sans-serif; font-weight: 700; color: #002307; font-size: 1.5rem; margin-bottom: 1.5rem;">See you soon on Agri-Energy Connect</h2>
        <p style="color: #002307; font-size: 1.1rem; font-family: 'Inter', sans-serif; margin-bottom: 2rem;">You have successfully logged out.<br />Thank you for being part of our community!</p>
        <a href="/" class="btn" style="background: #ffd36a; color: #222; font-weight: 700; font-size: 1.1rem; border-radius: 12px; padding: 0.7rem 2rem; box-shadow: 0 2px 8px rgba(0,0,0,0.07);">Return to Home</a>
    </div>
</div>

