@model AgriCulture.Models.Farmer

@{
    ViewData["Title"] = "Create Farmer Account";
}

<div class="log-overlay-custom"></div>

<div class="d-flex align-items-center justify-content-center py-4" style="min-height: 80vh; background: #fdfbf3;">
    <div class="p-4 glass-effect" style="background: #fffdf5; border: 5px solid #002307; border-radius: 16px; max-width: 600px; width: 100%; box-shadow: 0 4px 8px rgba(0, 0, 0, 0.2);">
        <h1 style="font-family: 'Inter', sans-serif; font-weight: 900; font-size: 3rem; color: #002307; margin-bottom: 0.5rem;">Add Farmer</h1>
        <h2 style="font-family: 'Inter', sans-serif; font-weight: 700; color: #ffd36a; font-size: 1.6rem; margin-bottom: 1.5rem;">Register a new Farmer</h2>
        @if (ViewBag.GeneratedPassword != null)
        {
            <div class="alert alert-success">
                <strong>Farmer account created!</strong><br />
                The autogenerated password for this farmer is: <code>@ViewBag.GeneratedPassword</code><br />
                Please copy and provide this password to the farmer.
            </div>
        }
        <form asp-action="CreateFarmer" autocomplete="off">
            <div asp-validation-summary="ModelOnly" class="text-danger mb-2"></div>
            <hr style="margin-bottom: 1.5rem; margin-top: 0.5rem;" />
            
            <div class="form-floating mb-3">
             <input asp-for="FirstName" class="form-control form-control-lg" id="FirstName" placeholder="First Name" style="font-size:1.1rem;"/>
             <label for="FirstName">First Name</label>
             <span asp-validation-for="FirstName" class="text-danger"></span>
       </div>

            <div class="form-floating mb-3">
                <input asp-for="LastName" class="form-control form-control-lg" placeholder="Last Name" style="font-size: 1.1rem;" />
                <label for="LastName">Last Name</label>
                <span asp-validation-for="LastName" class="text-danger"></span>
            </div>
            
            <div class="form-floating mb-3">
                <input asp-for="Email" class="form-control form-control-lg" placeholder="Email" style="font-size: 1.1rem;" />
                <label for="Email">Email</label>
                <span asp-validation-for="Email" class="text-danger"></span>
            </div>
            <div class="form-floating mb-3">
                <input asp-for="FarmName" class="form-control form-control-lg" placeholder="Farm Name" style="font-size: 1.1rem;" />
                <label for="FarmName">Farm Name</label>
                <span asp-validation-for="FarmName" class="text-danger"></span>
            </div>
            <div class="form-floating mb-3">
                <input asp-for="FarmLocation" class="form-control form-control-lg" placeholder="Farm Location" style="font-size: 1.1rem;" />
                <label for="FarmLocation">Farm Location</label>
                <span asp-validation-for="FarmLocation" class="text-danger"></span>
            </div>
            <div class="form-floating mb-4">
                <input asp-for="FarmSize" class="form-control form-control-lg" placeholder="Farm Size" style="font-size: 1.1rem;" />
                <label for="FarmSize">Farm Size</label>
                <span asp-validation-for="FarmSize" class="text-danger"></span>
            </div>
            <button type="submit" class="btn w-100" style="background: #ffd36a; color: #222; font-weight: 700; font-size: 1.3rem; border-radius: 14px; padding: 0.8rem 0; box-shadow: 0 2px 8px rgba(0,0,0,0.07);">Create Farmer</button>
        </form>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
} 
