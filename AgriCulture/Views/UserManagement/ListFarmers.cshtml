@model IEnumerable<AgriCulture.Models.Farmer>

@{
    ViewData["Title"] = "Farmers List";
}

<div class="log-overlay-custom"></div>

<div class="container py-5">
    <div class="mb-4 p-4" style="background: #fffdf5; border-radius: 16px; box-shadow: 0 2px 8px rgba(0,0,0,0.07);">
        <div class="d-flex justify-content-between align-items-center mb-3">
            <h1 style="font-family: 'Inter', sans-serif; font-weight: 900; font-size: 2.5rem; color: #002307; margin-bottom: 0;">Farmers List</h1>
            <a class="btn" asp-controller="UserManagement" asp-action="CreateFarmer" style="background: #ffd36a; color: #222; font-weight: 700; font-size: 1.1rem; border-radius: 12px; padding: 0.7rem 2rem; box-shadow: 0 2px 8px rgba(0,0,0,0.07);">Add Farmer</a>
        </div>
    </div>
    <div class="row g-4 mt-2">
        @foreach (var farmer in Model)
        {
            <div class="col-md-4 col-lg-3">
                <div class="card h-100 shadow-sm" style="border: 1.5px solid #002307; border-radius: 16px; background: #fffdf5;">
                    <div class="card-body">
                        <h5 class="card-title" style="font-family: 'Inter', sans-serif; font-weight: 900; color: #002307;">@farmer.FirstName @farmer.LastName</h5>
                        <h6 class="card-subtitle mb-2" style="color: #ffd36a; font-weight: 700;">@farmer.FarmName</h6>
                        <p class="mb-1" style="color: #002307; font-weight: 600;">Email: <span style="color: #222;">@farmer.Email</span></p>
                        <p class="mb-1" style="color: #002307; font-weight: 600;">Location: <span style="color: #222;">@farmer.FarmLocation</span></p>
                        <p class="mb-0" style="color: #002307; font-weight: 600;">Size: <span style="color: #222;">@farmer.FarmSize</span></p>
                    </div>
                </div>
            </div>
        }
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
} 